<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoshoSecurity.Views.PasswordChangePage">
    <ContentPage.Content>
        <StackLayout>
            <Image HeightRequest="250" WidthRequest="250" Margin="100,8,100,18" Source="https://img.pngio.com/data-security-assurance-vector-material-information-security-cyber-security-png-and-vector-security-png-650_683.png" />

            <Entry x:Name="currentPasswordEntry" WidthRequest="400" Margin="100,8,100,18" HorizontalTextAlignment="Center" Placeholder="Current Password" IsPassword="True"/>
            <Entry x:Name="newPasswordEntry" WidthRequest="400" Margin="100,8,100,18" HorizontalTextAlignment="Center" Placeholder="New password" IsPassword="True"/>
            <Entry x:Name="confirmNewPasswordEntry" WidthRequest="400" Margin="100,8,100,18" HorizontalTextAlignment="Center" Placeholder="Confirm new password" IsPassword="True"/>
            <Button Text="Change password" CornerRadius="30" BackgroundColor="#9FD1E4" VerticalOptions="Center" HorizontalOptions="Center" Clicked="ChangePasswordButton_Clicked"  />
            <Label TextColor="Red" HorizontalOptions="Center" HorizontalTextAlignment="Center" x:Name="messageLabel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>