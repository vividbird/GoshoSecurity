<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoshoSecurity.Views.PhotoPage">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Image HeightRequest="200" WidthRequest="200" Margin="100,50,100,18" Source="{Binding Url}" />
            <Button Text="Delete" WidthRequest="200" CornerRadius="30" BackgroundColor="#9FD1E4" VerticalOptions="Center" HorizontalOptions="Center" Clicked="DeleteButton_Clicked"  />
            <Button Text="Cancel" WidthRequest="200" CornerRadius="30" BackgroundColor="#9FD1E4" VerticalOptions="Center" HorizontalOptions="Center" Clicked="CancelButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>